<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <%= stylesheet_link_tag "reset" %>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "mixins" %>
    <%= stylesheet_link_tag "clickable_globe" %>
    <%= stylesheet_link_tag "countries" %>
    <%= stylesheet_link_tag "cities" %>
  </head>

  <header>
    <h1 id="app-title">World Data Correlator</h1>
    <div id="country-name-title">Select a Country</div>
  </header>

  <body>

    <section class="globe-and-data-container">
      <nav id="globe_nav_container">
      </nav>

      <section id="country_info_container">
        <article class="current-country-data"></article>
        <article id="city-list"></article>
      </section>
    </section>

    <section id="city_info_container">
      <article class="current-country-cities"></article>
    </section>

    <section>
      <div id="donut-chart"></div>
      <div id="bar-chart"></div>
      <div id="bubble-chart"></div>
    </section>

    <%= javascript_tag do %>
    <% end %>

    <script src="//d3js.org/topojson.v1.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <%= javascript_include_tag "clickable_globe.js" %>
  </body>
</html>
